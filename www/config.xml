<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.kryogenix.riddling"
        versionCode = "15" 
        version     = "1.1.0" >

    <name>Riddling</name>

    <description>
        A puzzle game involving intelligence, psychology, lateral thinking, research, and guesswork. For Google fiends, librarians, mathematicians, linguists, and pub quiz winners.
    </description>

    <author href="http://www.kryogenix.org/" email="sil@kryogenix.org">
        Stuart Langridge
    </author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true"/>
    
    <!-- ios only: only iphone, not ipad -->
    <preference name="target-device" value="handset" />

    <!-- android only: hide three-dots menu button -->
    <preference name="android-minSdkVersion" value="14" />

    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    
    <access origin="*" />

    <gap:splash src="icons/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="icons/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="icons/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136" />

    <icon src="icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/ios/icon-120.png" gap:platform="ios" width="120" height="120" />
    <icon src="icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="icons/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
    <icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" width="36" height="36" />
    <icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" width="48" height="48" />
    <icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" width="72" height="72" />
    <icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" width="96" height="96" />

    <preference name="permissions" value="none" />

</widget>
